#include<iostream>
#include <bits/stdc++.h>
using namespace std;

class Solution {
public:

    int sum(vector<int>& nums, int start, int end) {        
        int s = 0;
        while (start < end) { 
            s = s + nums[start];
            start++; 
        }
        return s;
    }

    int pivotIndex(vector<int>& nums) {
        int s = 0;
        int e = nums.size();
        int m = 0;

        while (m < e) {
            if (sum(nums, s, m) == sum(nums, m + 1, e)) { 
                return m;  
            }
            m++; 
        }
        return -1;
    }
};
